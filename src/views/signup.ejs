<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs'); %>
  </head>

  <body>
    <%- include('./partials/header.ejs'); %>
    <div id="container">
        <form method='POST'>
          <div id="signup-block">
            <label class="form-label" for="username">Username:</label><br>
            <input class="form-input" type="text" name="username" value="user"><br>

            <label class="form-label" for="password">Password:</label><br>
            <input class="form-input" type="password" name="password" value="password"><br>

            <label class="confirm-password-form-label" for="confirmPassword">Confirm Password: </label><br>
            <input class="form-input" type="password" name="confirmPassword" value="password"><br>

            <label class="email-form-label" for="email">Email:</label><br>
            <input class="form-input" type="text" name="email" value="example@example.com"><br>

            <input class="form-submit" type="submit">
          </div>
        </form>
      
    </div>
  </body>
</html>